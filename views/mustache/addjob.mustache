<form method="post" id="addJob">
    <div class="row">
        <div class="col-sm-3">
            <select id="itemProjectCombo" name="itemProject" data-placeholder="Select project">
                {{#projects}}
                    <option value="{{id}}" {{#current}}selected="selected"{{/current}}>
                        {{name}}
                    </option>
                {{/projects}}
            </select>
        </div>
        <p class="col-sm-6"></p>
    </div>
    <div class="row">
        <div class="col-sm-9">
            <input type="text" id="summary" name="summary" class="form-control" placeholder="Title" />
        </div>
    </div>
    {{#userIsInternal}}
    <section class="row">
        <div class="col-sm-3">
            <select name="assigned" data-placeholder="Select asignee">
                <option value="0">No one assigned</option>
                {{#internalUsers}}
                    <option value="{{getId}}">{{getNickname}}</option>
                {{/internalUsers}}
            </select>
        </div>
    </section>
    {{/userIsInternal}}
    <div class="row">
        <div class="col-md-9 col-sm-9">
            <label for="notes">Description</label>
            <textarea class="form-control autogrow mentions" name="notes" id="notes"
              placeholder="describe the work necessary to successfully complete this job"></textarea>
        </div>
        <div class="col-sm-3">
            <label>Labels</label>
            <ul id="labels">
                {{#skills}}
                    <li>
                        <input id="label{{id}}" type="checkbox" name="label[{{id}}]" value="{{skill}}" />
                        <label for="label{{id}}">{{skill}}</label>
                    </li>
                {{/skills}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-9">
            <fieldset id="attachments">
              <label>Drag &amp; drop or <em>select files</em> files to attach.</label>
              <ul></ul>
            </fieldset>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
          {{#currentUser.is_runner}}
              <select id="itemStatusCombo" name="itemStatus">
                  <option value="Draft">Draft</option>
                  <option value="Suggestion">Suggestion</option>
                  <option value="Bidding" selected="selected">Bidding</option>
                  <option value="In Progress">In Progress</option>
              </select>
          {{/currentUser.is_runner}}
        </div>

        {{#userIsInternal}}
        <div class="col-sm-offset-2 col-sm-3">
            <input type="checkbox" name="is_internal" id="is_internal" />
            <label for="is_internal">Internal</label>
        {{/userIsInternal}}
        {{^userIsInternal}}
        <div class="col-sm-offset-3 col-sm-2">
        {{/userIsInternal}}
            <button class="btn btn-primary" type="submit" name="save_item">Add job</button>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(function() {
        AddJob.init();
    })
</script>
