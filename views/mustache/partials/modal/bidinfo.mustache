<div class="modal fade" id="{{modal_id}}">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="./{{job_id}}" method="post">
        <input type="hidden" name="bid_id" value="{{bid.id}}" />
        <input type="hidden" id="budget_id" name="budget_id" value="" />
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Bid information</h4>
        </div>
        <div class="modal-body">
          <table id="bid-information" class="table table-condensed table-striped">
            <thead>
              <tr>
                <th>Bidder</th>
                <th>Amount</th>
                <th class="hidden-xs">Entered</th>
                <th>Completed</th>
                {{#bid.bid_accepted}}
                  <th class="hidden-xs">Accepted</th>
                {{/bid.bid_accepted}}
                {{^bid.bid_accepted}}
                  <th class="hidden-xs">Expires</th>
                {{/bid.bid_accepted}}
              </tr>
            </thead>
            <tbody>
              <tr>
                <td data-title="Bidder">
                  <a href="./user/{{bid.bidder_id}}">{{bid.nickname}}</a>
               </td>
                <td data-title="Amount">${{bid.amount}}</td>
                <td data-title="Entered" class="hidden-xs">{{bid.bid_created}}</td>
                <td data-title="Completed">in {{bid.done_in}}</td>
                {{#bid.bid_accepted}}
                  <td data-title="Accepted" class="hidden-xs">{{bid.bid_accepted}}</td>
                {{/bid.bid_accepted}}
                {{^bid.bid_accepted}}
                  <td data-title="Expires" class="hidden-xs">{{bid.bid_expires}}</td>
                {{/bid.bid_accepted}}
              </tr>
            </tbody>
          </table>
          {{#displayNotes}}
            <h5><strong>Notes:</strong></h5>
            <p>{{& bid.notes}}</p>
          {{/displayNotes}}
          {{#showStatistics}}
            <div class="row">
              <div class="col-md-5">
                <h4>Last jobs in project</h4>
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>ID &amp; Summary</th>
                    </tr>
                  </thead>
                  <tbody>
                  </tbody>
                </table>
              </div>
              <div class="col-md-7">
                <h4>Bidder jobs &amp; earnings statistics</h4>
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Total/Active</th>
                      <th>Total/30 days $</th>
                      <th>Bonus $/%</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td></td>
                      <td></td>
                      <td></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          {{/showStatistics}}
        </div>
        <div class="modal-footer">
          {{#canEdit}}
            <button class="btn btn-primary" data-dismiss="modal" name="edit">Edit</button>
          {{/canEdit}}
          {{#canWithdraw}}
            <button class="btn btn-primary" data-dismiss="modal" name="withdraw_bid_accept">Withdraw</button>
          {{/canWithdraw}}
          {{#canDecline}}
            <button class="btn btn-primary" data-dismiss="modal" name="decline_bid_accept">Decline</button>
          {{/canDecline}}
          {{#canAccept}}
            <div class="btn-group dropup">
              <button type="button" name="accept" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                Accept <span class="caret"></span>
              </button>
              <ul id="select-budget" class="dropdown-menu" role="menu">
                <li role="presentation" class="dropdown-header">Select a budget</li>
              </ul>
            </div>
          {{/canAccept}}
        </div>
      </form>
    </div>
  </div>
</div>
