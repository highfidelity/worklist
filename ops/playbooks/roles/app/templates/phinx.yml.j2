paths:
  migrations: '%%PHINX_CONFIG_DIR%%/db/migrations'
  seeds: '%%PHINX_CONFIG_DIR%%/db/seeds'

environments:
  default_migration_table: phinxlog
  default_database: production
  production:
    adapter: mysql
    host: {{ database.host }}
    name: {{ database.name }}
    user: {{ database.creds.user }}
    pass: {{ database.creds.pass }}
    port: {{ database.port }}
    charset: utf8

version_order: creation
